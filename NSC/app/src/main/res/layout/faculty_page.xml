<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/lightGray"
        android:weightSum="2">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/nsc_logo"></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Faculty Page"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_weight="1"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/nsc_faculty_bg"></ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Faculties"
            android:textSize="40dp"
            android:layout_marginTop="10dp"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1) CSIT (Computer Science and Information Technology)"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2) BCA (Bachelors In Computer Application)"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3) BBM (Bachelors In Bussiness Management)"
            android:textSize="20dp"
            android:layout_marginTop="10dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back To Main"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:id="@+id/btnBackFromFaculty"></Button>

    </LinearLayout>
    </LinearLayout>





</LinearLayout>